# Server Configuration
PORT=10000
NODE_ENV=development
BASE_URL=https://your-app-name.onrender.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-app-name.onrender.com/webhook/twilio

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_preferred_voice_id
ELEVENLABS_MODEL_ID=eleven_turbo_v2

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=en-US

# Google Services Configuration
GOOGLE_SHEETS_ID=your_google_sheets_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
GOOGLE_PROJECT_ID=your_google_project_id

# Gmail Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# n8n Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/
N8N_API_KEY=your_n8n_api_key

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_for_authentication

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (if needed for future expansion)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_calling

# Redis (for session management if needed)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Development Settings
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=*

# Call Settings
MAX_CALL_DURATION=300
CALL_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# AI Settings
CONVERSATION_TIMEOUT=30000
MAX_CONVERSATION_TURNS=20
ENABLE_CONVERSATION_LOGGING=true
